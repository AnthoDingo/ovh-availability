mixin ie(condition)
  | <!--[!{condition}]>
  block
  | <![endif]-->

doctype html
html
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible' content='IE=edge')
        meta(name='viewport' content='width=device-width, initial-scale=1')
        title=title

        link(href='/bower/bootstrap/dist/css/bootstrap.min.css', rel='stylesheet')
        link(href='/bower/font-awesome/css/font-awesome.min.css', rel='stylesheet')
        link(href='/font/tello/css/fontello.css', rel='stylesheet')
        link(href='/css/animation.css', rel='stylesheet')
        link(href='/css/template.css', rel='stylesheet')
        link(href='/css/style.css', rel='stylesheet')

        +ie('if lt IE 9')
            script(src='/bower/html5shiv/dist/html5shiv.js')
            script(src='/bower/respond/dest/respond.min.js')

        script(src='https://www.google.com/recaptcha/api.js' async defer)

    body
        #wrapper
            .container
                .row
                    .col-lg-10.col-lg-offset-1

                        block content

                        include includes/footer

        include includes/javascript
