mixin ie(condition)
  | <!--[!{condition}]>
  block
  | <![endif]-->

doctype html
html
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible' content='IE=edge')
        meta(name='viewport' content='width=device-width, initial-scale=1')
        meta(name="description" content="OVH, Kimsufi and SoYouStart servers availability checker.")
        meta(name="keywords" content="OVH,kimsufi,soyoustart,servers,availability,checker,email,notification,pushbullet")
        title=title

        include includes/newrelic

        link(href='https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,400,300,600,700' rel='stylesheet' type='text/css')
        link(href='/bower/font-awesome/css/font-awesome.min.css', rel='stylesheet')
        link(href='/css/dest/styles.min.css', rel='stylesheet')

        +ie('if lt IE 9')
            script(src='/bower/html5shiv/dist/html5shiv.js')
            script(src='/bower/respond/dest/respond.min.js')

        script(src='https://www.google.com/recaptcha/api.js' async defer)

    body
        #wrapper
            .container
                .row
                    .col-lg-10.col-lg-offset-1

                        block content

                        include includes/footer

        include includes/javascript
